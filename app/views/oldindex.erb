<div class="background"> <% if current_user %>

  <h4>Welcome, <%= current_user.user_name %></h4>

  <form method="post" action="/sessions">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Sign out">
  </form>

  <form method="post" action="/game/new">
    <input type="submit" value="Create Game">
  </form>

   <form method="post" action="/game/join">   
    <input type="submit" value="Join Game">
  </form>

<% end %>

<% if !current_user %>

     <h3>Welcome to Rock Paper Scissors</h3>

    <form method="get" action="/sessions/new">
      <input type="submit" value="Sign In">
    </form>

    <form method="get" action="/user/new">
      <input type="submit" value="Sign Up">
    </form>

<% end %>


</div>
